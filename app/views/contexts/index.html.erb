<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Set</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= form_tag search_path do %>
  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= label_tag :setting, setting.set %></td>
        <td><%= radio_button_tag :setting, setting.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="alpha">
  <table>
    <thead>
      <tr>
        <th>Situation</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @contexts.each do |context| %>
      <tr>
        <td><%= label_tag :context, context.situation %></td>
        <td><%= radio_button_tag :context, context.id %></td>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
  <div id="beta">
    <table>
      <thead>
        <tr>
          <th>Person</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @targets.each do |target| %>
        <tr>
          <td><%= label_tag :target, target.person %></td>
          <td><%= radio_button_tag :target, target.id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag 'Enter'%>
    <% end %>
    <br>
  </div>

<% if user_signed_in? %>
  <%= link_to 'New Quip', new_quip_path %>
  <%= link_to 'Log-out', destroy_user_session_path, method: :delete %>
  <% end %>
